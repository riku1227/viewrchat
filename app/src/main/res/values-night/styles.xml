<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundColor">#121212</item>

        <item name="toolbarElevation">4dp</item>
        <item name="toolbarIconTint">#FFFFFF</item>

        <item name="cardBackGroundColor">?attr/colorSurface</item>
        <item name="cardStrokeColor">@color/stroke_color_16</item>
        <item name="cardElevation">1dp</item>

        <item name="floatingActionButtonBackgroundColor">?attr/colorPrimary</item>
        <item name="floatingActionButtonBorderColor">@color/textColor</item>
        <item name="floatingActionButtonBorderWidth">0dp</item>
        <item name="floatingActionButtonElevation">8dp</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <item name="colorSurface">#000000</item>

        <item name="backgroundColor">#000000</item>

        <item name="toolbarElevation">0dp</item>

        <item name="cardBackGroundColor">#000000</item>
        <item name="cardStrokeColor">@color/stroke_color_18</item>
        <item name="cardElevation">0dp</item>

        <item name="floatingActionButtonBackgroundColor">?attr/colorSurface</item>
        <item name="floatingActionButtonBorderColor">@color/textColor</item>
        <item name="floatingActionButtonBorderWidth">1dp</item>
        <item name="floatingActionButtonElevation">0dp</item>
    </style>

    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">@color/textColor</item>
        <item name="subtitleTextColor">@color/textColorHigh</item>
        <item name="android:elevation">?attr/toolbarElevation</item>
    </style>

</resources>
