<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundColor">#FFFFFF</item>

        <item name="toolbarElevation">4dp</item>
        <item name="toolbarIconTint">#FFFFFF</item>

        <item name="cardBackGroundColor">?attr/colorSurface</item>
        <item name="cardStrokeColor">@color/stroke_color_14</item>
        <item name="cardOutlineElevation">2dp</item>
        <item name="cardStrokeWidth">0dp</item>
        <item name="cardElevation">2dp</item>

        <item name="bottomNavigationBackColor">?attr/colorOnPrimary</item>
        <item name="bottomNavigationStrokeColor">@color/stroke_color_08</item>

        <item name="floatingActionButtonBackgroundColor">?attr/colorPrimary</item>
        <item name="floatingActionButtonBorderColor">@color/textColor</item>
        <item name="floatingActionButtonBorderWidth">0dp</item>
        <item name="floatingActionButtonElevation">8dp</item>

        <item name="snackBarBackground">@null</item>
        <item name="snackBarOverlayColorAlpha">0.8</item>
        <item name="snackBarTextColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme"></style>

    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar.Primary"></style>

    <style name="RootLayout">
        <item name="android:background">?attr/backgroundColor</item>
    </style>

    <style name="OutlineCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/cardStrokeColor</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/cardBackGroundColor</item>
        <item name="strokeColor">@color/textColorDisabled</item>
        <item name="strokeWidth">?attr/cardStrokeWidth</item>
        <item name="cardElevation">?attr/cardElevation</item>
    </style>

    <style name="SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">?attr/snackBarBackground</item>
        <item name="backgroundOverlayColorAlpha">?attr/snackBarOverlayColorAlpha</item>
    </style>

    <style name="SnackBar.Text" parent="Widget.AppCompat.TextView">
        <item name="android:alpha">@dimen/material_emphasis_high_type</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/design_snackbar_text_max_lines</item>
        <item name="android:textAlignment" tools:ignore="NewApi">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?attr/snackBarTextColor</item>
        <item name="android:paddingTop">@dimen/design_snackbar_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/design_snackbar_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/design_snackbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/design_snackbar_padding_horizontal</item>
    </style>

</resources>
